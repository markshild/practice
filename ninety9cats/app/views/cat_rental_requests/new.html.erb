<h1> Submit A Rental Request, Fine Purveyor of Felines </h1>

<form action="<%= cat_rental_requests_url %>" method="post">
  <input
  name="authenticity_token"
  type="hidden"
  value="<%= form_authenticity_token %>">

  <br>

  <label for="cat">Cat Choice:</label>
  <select name="cat_rental_request[cat_id]" id="cat">
    <option value="">SELECT A CAT</option>
    <% @cats.each do |cat| %>
    <option value="<%=cat.id%>" <%= "selected" if cat.id == @cat_rental_request.cat_id%>><%=cat.name.capitalize%></option>
    <% end %>
  </select>

  <br>

  <label for="rental_start_date">Rental Start Date</label>
  <input type="date" name="cat_rental_request[start_date]" id="rental_start_date" value="<%= @cat_rental_request.start_date %>">

  <br>

  <label for="rental_end_date">Rental End Date</label>
  <input type="date" name="cat_rental_request[end_date]" id="rental_end_date" value="<%= @cat_rental_request.end_date %>">

  <br>

  <input type="submit" value=" Maybe Cat ">
</form>
