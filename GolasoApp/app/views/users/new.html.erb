<h1>Sign Up</h1>
<%= render 'layouts/errors' %>
<form  action="/users" method="post">
  <%= auth_token %>

  <label>Username
    <input type="text" name="user[username]" value="<%= @user.username %>">
  </label>

  <label>Password
    <input type="password" name="user[password]" value="<%= @user.password %>">
  </label>

  <input type="submit" value="Submit">
</form>
